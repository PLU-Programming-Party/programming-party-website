<script>
// API Base URL - Railway provides the URL
const API_BASE = 'https://worker-production-96f2.up.railway.app';

let currentSentenceId = null;

// Load story and initial sentence
async function loadStory() {
    try {
        const response = await fetch(`${API_BASE}/api/webwritten/story`);
        const data = await response.json();
        
        // Display story
        const storyText = document.getElementById('story-text');
        if (data.story) {
            storyText.innerHTML = `<p>${data.story}</p>`;
        } else {
            storyText.innerHTML = `<p class="loading">The story hasn't started yet...</p>`;
        }
        
        // Display sentence to vote on
        displaySentence(data.current_sentence);
        
        // Update vote stats
        document.getElementById('vote-stats').textContent = 
            `You've voted on ${data.sentences_voted} sentences. ${data.total_pending_sentences} sentences available.`;
            
    } catch (error) {
        console.error('Error loading story:', error);
        document.getElementById('story-text').innerHTML = 
            `<p class="loading">Unable to load story. Please try again later.</p>`;
    }
}

function displaySentence(sentence) {
    const sentenceDiv = document.getElementById('sentence-to-vote');
    const ratingButtons = document.getElementById('rating-buttons');
    const noMoreDiv = document.getElementById('no-more-sentences');
    
    if (sentence) {
        currentSentenceId = sentence.id;
        sentenceDiv.innerHTML = `<p>"${sentence.text}"</p>`;
        sentenceDiv.style.display = 'block';
        ratingButtons.style.display = 'block';
        noMoreDiv.style.display = 'none';
    } else {
        currentSentenceId = null;
        sentenceDiv.style.display = 'none';
        ratingButtons.style.display = 'none';
        noMoreDiv.style.display = 'block';
    }
}

// Submit vote
async function submitVote(rating) {
    if (!currentSentenceId) return;
    
    try {
        const response = await fetch(`${API_BASE}/api/webwritten/vote`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
                sentence_id: currentSentenceId,
                rating: rating
            })
        });
        
        const data = await response.json();
        
        if (data.success) {
            // Show next sentence
            displaySentence(data.next_sentence);
            document.getElementById('vote-stats').textContent = 
                `You've voted on ${data.sentences_voted} sentences.`;
        } else {
            console.error('Vote error:', data.error);
        }
    } catch (error) {
        console.error('Error submitting vote:', error);
    }
}

// Submit user sentence
async function submitSentence() {
    const textarea = document.getElementById('user-sentence');
    const statusDiv = document.getElementById('submit-status');
    const submitBtn = document.getElementById('submit-btn');
    const text = textarea.value.trim();
    
    if (!text) {
        statusDiv.textContent = 'Please enter a sentence.';
        statusDiv.className = 'submit-status error';
        return;
    }
    
    submitBtn.disabled = true;
    statusDiv.textContent = 'Submitting...';
    statusDiv.className = 'submit-status';
    
    try {
        const response = await fetch(`${API_BASE}/api/webwritten/submit`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ text: text })
        });
        
        const data = await response.json();
        
        if (data.success) {
            statusDiv.textContent = '‚úÖ ' + data.message;
            statusDiv.className = 'submit-status success';
            textarea.value = '';
            loadStats(); // Refresh stats
        } else {
            statusDiv.textContent = '‚ùå ' + data.error;
            statusDiv.className = 'submit-status error';
        }
    } catch (error) {
        statusDiv.textContent = '‚ùå Error submitting. Please try again.';
        statusDiv.className = 'submit-status error';
    }
    
    submitBtn.disabled = false;
}

// Load statistics
async function loadStats() {
    try {
        const response = await fetch(`${API_BASE}/api/webwritten/stats`);
        const data = await response.json();
        
        document.getElementById('stat-story-length').textContent = data.story_length;
        document.getElementById('stat-pending').textContent = data.pending_sentences;
        document.getElementById('stat-votes-today').textContent = data.total_votes_today;
        
        // Format next selection time
        const nextSelection = new Date(data.next_selection);
        const now = new Date();
        const hoursUntil = Math.round((nextSelection - now) / (1000 * 60 * 60));
        document.getElementById('stat-next-selection').textContent = 
            hoursUntil > 0 ? `${hoursUntil}h` : 'Soon!';
            
    } catch (error) {
        console.error('Error loading stats:', error);
    }
}

// Event listeners
document.querySelectorAll('.star-btn').forEach(btn => {
    btn.addEventListener('click', () => {
        const rating = parseInt(btn.dataset.rating);
        submitVote(rating);
    });
});

document.getElementById('submit-btn').addEventListener('click', submitSentence);

// Allow Enter key to submit (with Shift+Enter for newline)
document.getElementById('user-sentence').addEventListener('keydown', (e) => {
    if (e.key === 'Enter' && !e.shiftKey) {
        e.preventDefault();
        submitSentence();
    }
});

// Initialize
document.addEventListener('DOMContentLoaded', () => {
    loadStory();
    loadStats();
    
    // Refresh stats every minute
    setInterval(loadStats, 60000);
});
</script>
